{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${input:target}",
            "args": ["9", "8", "4"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                { "name": "LD_LIBRARY_PATH", "value": "${workspaceFolder}/build/src/.libs"}, 
                { "name": "ARMAS_CONFIG", "value": "4,4,4,4,4,4,y" },
                { "name": "ARMAS_CACHE", "value": "4096,1024" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "target",
            "type": "promptString",
            //"default": "${relativeFileDirname}/${fileBasenameNoExtension}",
            "description": "debug target"
        }
    ]

}